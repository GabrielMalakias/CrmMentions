<p id="notice"><%= notice %></p>

<h1>Listing Tweets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>User Profile</th>
      <th>Created at</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td>
          <%= link_to tweet_path(tweet) do
              tweet.text
          end%>
        </td>
        <td>
          <%= link_to "https://twitter.com/#{tweet.user.screen_name}" do
              tweet.user.screen_name
          end%>
        </td>
        <td><%= tweet.created_at %></td>
        <td><%= tweet.status_name %></span></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @tweets %>