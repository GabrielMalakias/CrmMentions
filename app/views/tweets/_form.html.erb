    <%= f.label :text %><br>
    <%= @tweet.text%>
  </div>
  <div class="field">
    <%= f.label :created_at %><br>
    <%= @tweet.created_at%>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, [1, 0]  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
