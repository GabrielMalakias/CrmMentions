<div class="page-header">
	<h1><%= I18n.t('update_mode')%></h1>
</div>
<%= form_tag parse_tweets_path, :class => 'form-horizontal' do %>
  	<div class="control-group">
	   	<%= label_tag I18n.t('result_type'), nil, :class => 'control-label' %>
	    <div class="controls">
	     <%= select_tag :result_type, options_for_select(@options) %>
	    </div>
  	</div>
	<div class="form-actions">
	    <%= submit_tag I18n.t('helpers.titles.run'), :class => 'btn btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                tweets_path, :class => 'btn' %>
	</div>
<% end %>